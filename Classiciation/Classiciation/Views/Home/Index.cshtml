@model IEnumerable<ClassificationExample.Models.Classification>

@{
    ViewData["Title"] = "Index";
}

@section css
{

}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="m-0">Classification List</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="container-fluid">
            <div class="form-group" style="display: block; margin-left: 10px;" id="classiCreateEditDiv">
                <div class="row">
                    <div class="form-group list-group-item" style="max-height:286px;overflow-y: scroll;width:240px;padding: 0px;margin-right:5px;" flag="list_group" flag-id="1">
                        <div class="list-group" role="tablist">
                            <a class="list-group-item list-group-item-action" style="padding-top:5px; padding-bottom:5px;" data-toggle="list" href="#list-home" cid="0" sid="0">list item...</a>
                        </div>
                    </div>
                    <div class="card card-default" flag="Operation">
                        <div class="card-header">
                            <h3 class="card-title">Operation</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Classification Name</label>
                                <input type="text" class="form-control my-colorpicker1 colorpicker-element" data-colorpicker-id="1" data-original-title="">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox">
                                    <label class="form-check-label">Create Item From Root</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <button class="btn-sm btn-primary">Create</button>
                                <button class="btn-sm btn-primary">Edit</button>
                                <button class="btn-sm btn-primary">Delete</button>
                            </div>
                            <div class="form-group" style="display:none">
                                <button class="btn-sm btn-primary" id="ConfirmBtn">Confirm Delete</button>
                                <button class="btn-sm btn-primary" id="CancelBtn">Cancel Delete</button>
                            </div>
                            <div class="form-group">
                                <label style="color:red;font-size:11px;"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript" src="~/js/classification.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>
}
